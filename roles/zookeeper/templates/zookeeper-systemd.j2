[Unit]
Description=Apache Zookeeper
Requires=network.target
After=network.target

[Service]
Type=forking
User={{ bd_user }}
Group={{ bd_group }}
ExecStart={{ zk_install_dir }}/bin/zkServer.sh start
ExecStop={{ zk_install_dir }}/bin/zkServer.sh stop
Restart=on-failure

[Install]
WantedBy=multi-user.target